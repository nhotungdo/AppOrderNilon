<Window x:Class="AppOrderNilon.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AppOrderNilon - Quản lý vật liệu xây dựng" 
        Height="800" Width="1200"
        WindowState="Maximized"
        Background="#F5F5F5">
    
    <Window.Resources>
        <Style x:Key="NavigationButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#424242"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,15"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E3F2FD"/>
                                <Setter Property="Foreground" Value="#1976D2"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#BBDEFB"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#DDDDDD" Direction="270" ShadowDepth="2" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Navigation Sidebar -->
        <Border Grid.Column="0" Background="White" Effect="{StaticResource CardStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Logo and Title -->
                <Border Grid.Row="0" Background="#2196F3" Padding="20">
                    <StackPanel>
                        <TextBlock Text="🏗️" FontSize="30" HorizontalAlignment="Center"/>
                        <TextBlock Text="AppOrderNilon" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Foreground="White" 
                                   HorizontalAlignment="Center"
                                   Margin="0,5,0,0"/>
                        <TextBlock Text="Quản lý vật liệu xây dựng" 
                                   FontSize="10" 
                                   Foreground="#E3F2FD" 
                                   HorizontalAlignment="Center"
                                   Margin="0,2,0,0"/>
                    </StackPanel>
                </Border>
                
                <!-- Navigation Menu -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="0,20,0,0">
                        <Button x:Name="btnDashboard" 
                                Content="📊 Dashboard" 
                                Style="{StaticResource NavigationButton}"
                                Click="btnDashboard_Click"/>
                        
                        <Button x:Name="btnProducts" 
                                Content="📦 Quản lý sản phẩm" 
                                Style="{StaticResource NavigationButton}"
                                Click="btnProducts_Click"/>
                        
                        <Button x:Name="btnOrders" 
                                Content="📋 Quản lý đơn hàng" 
                                Style="{StaticResource NavigationButton}"
                                Click="btnOrders_Click"/>
                        
                        <Button x:Name="btnCustomers" 
                                Content="👥 Quản lý khách hàng" 
                                Style="{StaticResource NavigationButton}"
                                Click="btnCustomers_Click"/>
                        
                        <Button x:Name="btnStaff" 
                                Content="👨‍💼 Quản lý nhân viên" 
                                Style="{StaticResource NavigationButton}"
                                Click="btnStaff_Click"/>
                        
                        <Button x:Name="btnSuppliers" 
                                Content="🏢 Quản lý nhà cung cấp" 
                                Style="{StaticResource NavigationButton}"
                                Click="btnSuppliers_Click"/>
                        
                        <Button x:Name="btnCategories" 
                                Content="📂 Quản lý danh mục" 
                                Style="{StaticResource NavigationButton}"
                                Click="btnCategories_Click"/>
                        
                        <Button x:Name="btnReports" 
                                Content="📈 Báo cáo" 
                                Style="{StaticResource NavigationButton}"
                                Click="btnReports_Click"/>
                        
                        <Button x:Name="btnSettings" 
                                Content="⚙️ Cài đặt hệ thống" 
                                Style="{StaticResource NavigationButton}"
                                Click="btnSettings_Click"/>
                        
                        <Button x:Name="btnAdmins" 
                                Content="👑 Quản lý Admin" 
                                Style="{StaticResource NavigationButton}"
                                Click="btnAdmins_Click"/>
                    </StackPanel>
                </ScrollViewer>
                
                <!-- User Info -->
                <Border Grid.Row="2" Background="#F5F5F5" Padding="15">
                    <StackPanel>
                        <TextBlock Text="👤 Admin" 
                                   FontWeight="SemiBold" 
                                   FontSize="12"/>
                        <TextBlock Text="admin@appordernilon.com" 
                                   FontSize="10" 
                                   Foreground="#666666"
                                   Margin="0,2,0,0"/>
                        <Button Content="Đăng xuất" 
                                Background="Transparent"
                                BorderThickness="0"
                                Foreground="#F44336"
                                FontSize="10"
                                HorizontalAlignment="Left"
                                Padding="0,5,0,5"
                                Margin="0,5,0,0"
                                Click="btnLogout_Click"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
        
        <!-- Main Content Area -->
        <Grid Grid.Column="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <Border Grid.Row="0" Background="White" Style="{StaticResource CardStyle}" Margin="0,0,0,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0">
                        <TextBlock x:Name="txtPageTitle" 
                                   Text="Dashboard" 
                                   FontSize="24" 
                                   FontWeight="Bold"/>
                        <TextBlock Text="Tổng quan hệ thống quản lý vật liệu xây dựng" 
                                   FontSize="14" 
                                   Foreground="#666666"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <TextBlock Text="📅 " FontSize="16" VerticalAlignment="Center"/>
                        <TextBlock x:Name="txtCurrentDate" 
                                   Text="" 
                                   FontSize="14" 
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Content Frame -->
            <Frame Grid.Row="1" 
                   x:Name="MainFrame" 
                   NavigationUIVisibility="Hidden"
                   Background="Transparent"/>
        </Grid>
    </Grid>
</Window> 