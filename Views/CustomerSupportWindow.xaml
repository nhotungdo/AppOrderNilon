<Window x:Class="AppOrderNilon.Views.CustomerSupportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hỗ trợ khách hàng" Height="700" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="#4CAF50" 
                Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Hỗ trợ khách hàng" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="White"/>
                    <TextBlock Text="Liên hệ và tìm kiếm thông tin hỗ trợ" 
                               FontSize="14" 
                               Foreground="White" 
                               Opacity="0.9"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal" 
                            VerticalAlignment="Center">
                    <TextBlock Text="Khách hàng: " 
                               Foreground="White" 
                               VerticalAlignment="Center"/>
                    <TextBlock x:Name="txtCustomerName" 
                               Text="Khách hàng" 
                               Foreground="White" 
                               FontWeight="Bold" 
                               VerticalAlignment="Center"/>
                    <Button Content="Quay lại" 
                            Background="Transparent" 
                            Foreground="White" 
                            BorderBrush="White" 
                            BorderThickness="1"
                            Padding="15,5"
                            Margin="20,0,0,0"
                            Click="Back_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Border Grid.Row="1" 
                Background="White" 
                Margin="20" 
                CornerRadius="10" 
                Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Contact Form -->
                <Border Grid.Column="0" 
                        Background="#F8F9FA" 
                        CornerRadius="8" 
                        Padding="20" 
                        Margin="0,0,10,0">
                    <StackPanel>
                        <TextBlock Text="📞 Liên hệ hỗ trợ" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Margin="0,0,0,15"/>

                        <TextBlock Text="Chủ đề:" 
                                   FontWeight="Bold" 
                                   Margin="0,0,0,5"/>
                        <ComboBox x:Name="cmbSubject" 
                                  Margin="0,0,0,15">
                            <ComboBoxItem Content="Vấn đề đơn hàng"/>
                            <ComboBoxItem Content="Vấn đề sản phẩm"/>
                            <ComboBoxItem Content="Vấn đề thanh toán"/>
                            <ComboBoxItem Content="Vấn đề tài khoản"/>
                            <ComboBoxItem Content="Đề xuất cải thiện"/>
                            <ComboBoxItem Content="Khác"/>
                        </ComboBox>

                        <TextBlock Text="Mô tả vấn đề:" 
                                   FontWeight="Bold" 
                                   Margin="0,0,0,5"/>
                        <TextBox x:Name="txtDescription" 
                                 Height="100"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto"
                                 Margin="0,0,0,15"/>

                        <TextBlock Text="Số điện thoại liên hệ:" 
                                   FontWeight="Bold" 
                                   Margin="0,0,0,5"/>
                        <TextBox x:Name="txtContactPhone" 
                                 Margin="0,0,0,15"/>

                        <TextBlock Text="Email:" 
                                   FontWeight="Bold" 
                                   Margin="0,0,0,5"/>
                        <TextBox x:Name="txtContactEmail" 
                                 Margin="0,0,0,20"/>

                        <Button Content="Gửi yêu cầu hỗ trợ" 
                                Background="#4CAF50"
                                Foreground="White"
                                Height="40"
                                FontWeight="Bold"
                                Click="SendSupportRequest_Click"/>
                    </StackPanel>
                </Border>

                <!-- Divider -->
                <Border Grid.Column="1" 
                        Background="#E0E0E0" 
                        Width="2" 
                        Margin="10,0"/>

                <!-- FAQ Section -->
                <Border Grid.Column="2" 
                        Background="#F8F9FA" 
                        CornerRadius="8" 
                        Padding="20" 
                        Margin="10,0,0,0">
                    <StackPanel>
                        <TextBlock Text="❓ Câu hỏi thường gặp" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Margin="0,0,0,15"/>

                        <ScrollViewer Height="400">
                            <StackPanel>
                                <Expander Header="Làm thế nào để đặt hàng?" 
                                          IsExpanded="False" 
                                          Margin="0,0,0,10">
                                    <TextBlock Text="1. Đăng nhập vào tài khoản\n2. Chọn 'Đặt hàng mới'\n3. Chọn sản phẩm và số lượng\n4. Xác nhận thông tin giao hàng\n5. Chọn phương thức thanh toán\n6. Hoàn tất đơn hàng" 
                                               TextWrapping="Wrap" 
                                               Margin="10"/>
                                </Expander>

                                <Expander Header="Thời gian giao hàng là bao lâu?" 
                                          IsExpanded="False" 
                                          Margin="0,0,0,10">
                                    <TextBlock Text="• Nội thành Hà Nội: 1-2 ngày làm việc\n• Các tỉnh lân cận: 2-3 ngày làm việc\n• Các tỉnh khác: 3-5 ngày làm việc\n• Vùng sâu vùng xa: 5-7 ngày làm việc" 
                                               TextWrapping="Wrap" 
                                               Margin="10"/>
                                </Expander>

                                <Expander Header="Có thể hủy đơn hàng không?" 
                                          IsExpanded="False" 
                                          Margin="0,0,0,10">
                                    <TextBlock Text="Có thể hủy đơn hàng trong các trường hợp:\n• Đơn hàng chưa được xử lý\n• Đơn hàng đang trong quá trình xử lý\n\nLiên hệ ngay với chúng tôi để được hỗ trợ hủy đơn hàng." 
                                               TextWrapping="Wrap" 
                                               Margin="10"/>
                                </Expander>

                                <Expander Header="Phương thức thanh toán nào được chấp nhận?" 
                                          IsExpanded="False" 
                                          Margin="0,0,0,10">
                                    <TextBlock Text="Chúng tôi chấp nhận các phương thức thanh toán:\n• Tiền mặt khi nhận hàng (COD)\n• Chuyển khoản ngân hàng\n• Ví điện tử (MoMo, ZaloPay)\n• Thẻ tín dụng/ghi nợ" 
                                               TextWrapping="Wrap" 
                                               Margin="10"/>
                                </Expander>

                                <Expander Header="Làm thế nào để tích điểm thưởng?" 
                                          IsExpanded="False" 
                                          Margin="0,0,0,10">
                                    <TextBlock Text="• Tích 1 điểm cho mỗi 10,000 VNĐ mua hàng\n• Điểm được cộng sau khi đơn hàng hoàn thành\n• Điểm có hiệu lực trong 12 tháng\n• Đổi 1,000 điểm = 50,000 VNĐ giảm giá" 
                                               TextWrapping="Wrap" 
                                               Margin="10"/>
                                </Expander>

                                <Expander Header="Có chính sách đổi trả không?" 
                                          IsExpanded="False" 
                                          Margin="0,0,0,10">
                                    <TextBlock Text="Chúng tôi có chính sách đổi trả trong 7 ngày:\n• Sản phẩm bị lỗi kỹ thuật\n• Sản phẩm không đúng mô tả\n• Sản phẩm bị hư hỏng trong quá trình vận chuyển\n\nLiên hệ ngay để được hỗ trợ đổi trả." 
                                               TextWrapping="Wrap" 
                                               Margin="10"/>
                                </Expander>
                            </StackPanel>
                        </ScrollViewer>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window> 