<Window x:Class="AppOrderNilon.Views.DashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dashboard - AppOrderNilon" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="#F5F5F5">
    
    <Window.Resources>
        <DropShadowEffect x:Key="CardShadow" 
                          BlurRadius="8" 
                          Direction="270" 
                          ShadowDepth="2" 
                          Color="#22000000"/>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#2196F3" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Dashboard" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="White"/>
                    <TextBlock Text="Tổng quan hệ thống quản lý đơn hàng" 
                               FontSize="14" 
                               Foreground="White" 
                               Margin="0,5,0,0"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock Text="Xin chào, " 
                               Foreground="White" 
                               VerticalAlignment="Center"/>
                    <TextBlock x:Name="txtUserName" 
                               Text="Admin" 
                               Foreground="White" 
                               FontWeight="Bold" 
                               VerticalAlignment="Center"/>
                    <Button Content="Đăng xuất" 
                            Background="Transparent" 
                            Foreground="White" 
                            BorderBrush="White" 
                            BorderThickness="1"
                            Padding="10,5"
                            Margin="15,0,0,0"
                            Click="Logout_Click"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Statistics Cards -->
                <Grid Grid.Row="0" Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Total Revenue -->
                    <Border Grid.Column="0" 
                            Background="White" 
                            CornerRadius="10" 
                            Padding="20" 
                            Margin="0,0,10,0"
                            Effect="{StaticResource CardShadow}">
                        <StackPanel>
                            <TextBlock Text="Tổng doanh thu" 
                                       FontSize="14" 
                                       Foreground="#666666"/>
                            <TextBlock x:Name="txtTotalRevenue" 
                                       Text="₫50,000,000" 
                                       FontSize="24" 
                                       FontWeight="Bold" 
                                       Foreground="#4CAF50" 
                                       Margin="0,5,0,0"/>
                            <TextBlock Text="Tháng này" 
                                       FontSize="12" 
                                       Foreground="#999999" 
                                       Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Total Orders -->
                    <Border Grid.Column="1" 
                            Background="White" 
                            CornerRadius="10" 
                            Padding="20" 
                            Margin="5,0,5,0"
                            Effect="{StaticResource CardShadow}">
                        <StackPanel>
                            <TextBlock Text="Tổng đơn hàng" 
                                       FontSize="14" 
                                       Foreground="#666666"/>
                            <TextBlock x:Name="txtTotalOrders" 
                                       Text="150" 
                                       FontSize="24" 
                                       FontWeight="Bold" 
                                       Foreground="#2196F3" 
                                       Margin="0,5,0,0"/>
                            <TextBlock Text="Tháng này" 
                                       FontSize="12" 
                                       Foreground="#999999" 
                                       Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Products Sold -->
                    <Border Grid.Column="2" 
                            Background="White" 
                            CornerRadius="10" 
                            Padding="20" 
                            Margin="5,0,5,0"
                            Effect="{StaticResource CardShadow}">
                        <StackPanel>
                            <TextBlock Text="Sản phẩm đã bán" 
                                       FontSize="14" 
                                       Foreground="#666666"/>
                            <TextBlock x:Name="txtProductsSold" 
                                       Text="1,250" 
                                       FontSize="24" 
                                       FontWeight="Bold" 
                                       Foreground="#FF9800" 
                                       Margin="0,5,0,0"/>
                            <TextBlock Text="Tháng này" 
                                       FontSize="12" 
                                       Foreground="#999999" 
                                       Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Pending Orders -->
                    <Border Grid.Column="3" 
                            Background="White" 
                            CornerRadius="10" 
                            Padding="20" 
                            Margin="10,0,0,0"
                            Effect="{StaticResource CardShadow}">
                        <StackPanel>
                            <TextBlock Text="Đơn hàng chờ xử lý" 
                                       FontSize="14" 
                                       Foreground="#666666"/>
                            <TextBlock x:Name="txtPendingOrders" 
                                       Text="25" 
                                       FontSize="24" 
                                       FontWeight="Bold" 
                                       Foreground="#F44336" 
                                       Margin="0,5,0,0"/>
                            <TextBlock Text="Cần xử lý" 
                                       FontSize="12" 
                                       Foreground="#999999" 
                                       Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>
                
                <!-- Charts and Notifications -->
                <Grid Grid.Row="1" Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Revenue Chart -->
                    <Border Grid.Column="0" 
                            Background="White" 
                            CornerRadius="10" 
                            Padding="20" 
                            Margin="0,0,10,0"
                            Effect="{StaticResource CardShadow}">
                        <StackPanel>
                            <TextBlock Text="Biểu đồ doanh thu" 
                                       FontSize="18" 
                                       FontWeight="Bold" 
                                       Margin="0,0,0,15"/>
                            
                            <!-- Simple Chart (placeholder) -->
                            <Border Height="200" 
                                    Background="#F8F9FA" 
                                    BorderBrush="#E0E0E0" 
                                    BorderThickness="1" 
                                    CornerRadius="5">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <!-- Chart Area -->
                                    <Canvas Grid.Row="0" x:Name="chartCanvas" Margin="20">
                                        <!-- Chart bars will be drawn here -->
                                        <Rectangle Canvas.Left="50" Canvas.Top="50" Width="60" Height="100" Fill="#2196F3"/>
                                        <Rectangle Canvas.Left="130" Canvas.Top="30" Width="60" Height="120" Fill="#4CAF50"/>
                                        <Rectangle Canvas.Left="210" Canvas.Top="70" Width="60" Height="80" Fill="#FF9800"/>
                                        <Rectangle Canvas.Left="290" Canvas.Top="20" Width="60" Height="130" Fill="#9C27B0"/>
                                        <Rectangle Canvas.Left="370" Canvas.Top="60" Width="60" Height="90" Fill="#F44336"/>
                                    </Canvas>
                                    
                                    <!-- Chart Labels -->
                                    <StackPanel Grid.Row="1" 
                                                Orientation="Horizontal" 
                                                HorizontalAlignment="Center" 
                                                Margin="20,10">
                                        <TextBlock Text="T1" Margin="0,0,20,0" Foreground="#666666"/>
                                        <TextBlock Text="T2" Margin="0,0,20,0" Foreground="#666666"/>
                                        <TextBlock Text="T3" Margin="0,0,20,0" Foreground="#666666"/>
                                        <TextBlock Text="T4" Margin="0,0,20,0" Foreground="#666666"/>
                                        <TextBlock Text="T5" Margin="0,0,20,0" Foreground="#666666"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </Border>
                    
                    <!-- Notifications -->
                    <Border Grid.Column="1" 
                            Background="White" 
                            CornerRadius="10" 
                            Padding="20" 
                            Margin="10,0,0,0"
                            Effect="{StaticResource CardShadow}">
                        <StackPanel>
                            <TextBlock Text="Thông báo &amp; Cảnh báo" 
                                       FontSize="18" 
                                       FontWeight="Bold" 
                                       Margin="0,0,0,15"/>
                            
                            <ScrollViewer Height="200" VerticalScrollBarVisibility="Auto">
                                <StackPanel>
                                    <!-- Recent Orders -->
                                    <TextBlock Text="Đơn hàng mới:" 
                                               FontWeight="SemiBold" 
                                               Margin="0,0,0,10"/>
                                    
                                    <Border Background="#E3F2FD" 
                                            Padding="10" 
                                            CornerRadius="5" 
                                            Margin="0,0,0,10">
                                        <StackPanel>
                                            <TextBlock Text="Đơn hàng #001" 
                                                       FontWeight="SemiBold"/>
                                            <TextBlock Text="Khách hàng: Công ty Xây dựng Minh Anh" 
                                                       FontSize="12" 
                                                       Foreground="#666666"/>
                                            <TextBlock Text="Tổng tiền: ₫250,000" 
                                                       FontSize="12" 
                                                       Foreground="#666666"/>
                                        </StackPanel>
                                    </Border>
                                    
                                    <Border Background="#E3F2FD" 
                                            Padding="10" 
                                            CornerRadius="5" 
                                            Margin="0,0,0,10">
                                        <StackPanel>
                                            <TextBlock Text="Đơn hàng #002" 
                                                       FontWeight="SemiBold"/>
                                            <TextBlock Text="Khách hàng: Lê Văn C" 
                                                       FontSize="12" 
                                                       Foreground="#666666"/>
                                            <TextBlock Text="Tổng tiền: ₫180,000" 
                                                       FontSize="12" 
                                                       Foreground="#666666"/>
                                        </StackPanel>
                                    </Border>
                                    
                                    <!-- Low Stock Alerts -->
                                    <TextBlock Text="Cảnh báo tồn kho:" 
                                               FontWeight="SemiBold" 
                                               Margin="0,15,0,10"/>
                                    
                                    <Border Background="#FFF3E0" 
                                            Padding="10" 
                                            CornerRadius="5" 
                                            Margin="0,0,0,10">
                                        <StackPanel>
                                            <TextBlock Text="Mũ bảo hộ ABS" 
                                                       FontWeight="SemiBold"/>
                                            <TextBlock Text="Chỉ còn: 5 sản phẩm" 
                                                       FontSize="12" 
                                                       Foreground="#F57C00"/>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                            </ScrollViewer>
                        </StackPanel>
                    </Border>
                </Grid>
                
                <!-- Quick Actions -->
                <Border Grid.Row="2" 
                        Background="White" 
                        CornerRadius="10" 
                        Padding="20"
                        Effect="{StaticResource CardShadow}">
                    <StackPanel>
                        <TextBlock Text="Thao tác nhanh" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Margin="0,0,0,15"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <Button Grid.Column="0" 
                                    Content="Quản lý sản phẩm" 
                                    Height="50" 
                                    Background="#2196F3" 
                                    Foreground="White" 
                                    FontWeight="SemiBold"
                                    Margin="0,0,10,0"
                                    Click="ManageProducts_Click"/>
                            
                            <Button Grid.Column="1" 
                                    Content="Quản lý đơn hàng" 
                                    Height="50" 
                                    Background="#4CAF50" 
                                    Foreground="White" 
                                    FontWeight="SemiBold"
                                    Margin="5,0,5,0"
                                    Click="ManageOrders_Click"/>
                            
                            <Button Grid.Column="2" 
                                    Content="Quản lý khách hàng" 
                                    Height="50" 
                                    Background="#FF9800" 
                                    Foreground="White" 
                                    FontWeight="SemiBold"
                                    Margin="5,0,5,0"
                                    Click="ManageCustomers_Click"/>
                            
                            <Button Grid.Column="3" 
                                    Content="Báo cáo &amp; Thống kê" 
                                    Height="50" 
                                    Background="#9C27B0" 
                                    Foreground="White" 
                                    FontWeight="SemiBold"
                                    Margin="10,0,0,0"
                                    Click="Reports_Click"/>
                        </Grid>
                        
                        <!-- Additional Admin Actions -->
                        <Grid Margin="0,20,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <Button Grid.Column="0" 
                                    Content="Quản lý Admin &amp; Staff" 
                                    Height="50" 
                                    Background="#607D8B" 
                                    Foreground="White" 
                                    FontWeight="SemiBold"
                                    Margin="0,0,10,0"
                                    Click="ManageAdmins_Click"/>
                            
                            <Button Grid.Column="1" 
                                    Content="Quản lý Danh mục" 
                                    Height="50" 
                                    Background="#795548" 
                                    Foreground="White" 
                                    FontWeight="SemiBold"
                                    Margin="5,0,5,0"
                                    Click="ManageCategories_Click"/>
                            
                            <Button Grid.Column="2" 
                                    Content="Cài đặt hệ thống" 
                                    Height="50" 
                                    Background="#795548" 
                                    Foreground="White" 
                                    FontWeight="SemiBold"
                                    Margin="10,0,0,0"
                                    Click="SystemSettings_Click"/>
                        </Grid>
                        
                        <!-- Additional Management Actions -->
                        <Grid Margin="0,20,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <Button Grid.Column="0" 
                                    Content="Quản lý Nhân viên" 
                                    Height="50" 
                                    Background="#E91E63" 
                                    Foreground="White" 
                                    FontWeight="SemiBold"
                                    Margin="0,0,10,0"
                                    Click="ManageStaff_Click"/>
                            
                            <Button Grid.Column="1" 
                                    Content="Quản lý Nhà cung cấp" 
                                    Height="50" 
                                    Background="#00BCD4" 
                                    Foreground="White" 
                                    FontWeight="SemiBold"
                                    Margin="5,0,5,0"
                                    Click="ManageSuppliers_Click"/>
                            
                            <Button Grid.Column="2" 
                                    Content="Quản lý Báo cáo" 
                                    Height="50" 
                                    Background="#8BC34A" 
                                    Foreground="White" 
                                    FontWeight="SemiBold"
                                    Margin="10,0,0,0"
                                    Click="ManageReports_Click"/>
                        </Grid>
                    </StackPanel>
                </Border>
            </Grid>
        </ScrollViewer>
    </Grid>
</Window> 