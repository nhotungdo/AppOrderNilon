<Window x:Class="AppOrderNilon.Views.SystemSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cài đặt hệ thống - AppOrderNilon" Height="600" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">
    
    <Window.Resources>
        <DropShadowEffect x:Key="CardShadow" 
                          BlurRadius="8" 
                          Direction="270" 
                          ShadowDepth="2" 
                          Color="#22000000"/>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#2196F3" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Cài đặt hệ thống" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="White"/>
                    <TextBlock Text="Quản lý cấu hình và thiết lập hệ thống" 
                               FontSize="14" 
                               Foreground="White" 
                               Margin="0,5,0,0"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="Về Dashboard" 
                            Background="Transparent" 
                            Foreground="White" 
                            BorderBrush="White" 
                            BorderThickness="1"
                            Padding="10,5"
                            Margin="0,0,10,0"
                            Click="BackToDashboard_Click"/>
                    <Button Content="Đăng xuất" 
                            Background="Transparent" 
                            Foreground="White" 
                            BorderBrush="White" 
                            BorderThickness="1"
                            Padding="10,5"
                            Click="Logout_Click"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Database Settings -->
                <Border Grid.Row="0" 
                        Background="White" 
                        CornerRadius="10" 
                        Padding="20" 
                        Margin="0,0,0,20"
                        Effect="{StaticResource CardShadow}">
                    <StackPanel>
                        <TextBlock Text="Cài đặt cơ sở dữ liệu" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Margin="0,0,0,15"/>
                        
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Row="0" Grid.Column="0" 
                                       Text="Server:" 
                                       VerticalAlignment="Center" 
                                       Margin="0,0,10,10"/>
                            <TextBox Grid.Row="0" Grid.Column="1" 
                                     x:Name="txtServer" 
                                     Text="NHOTUNG\SQLEXPRESS"
                                     Padding="8,6" 
                                     Margin="0,0,10,10"/>
                            <Button Grid.Row="0" Grid.Column="2" 
                                    Content="Test Connection" 
                                    Background="#2196F3" 
                                    Foreground="White" 
                                    Padding="15,6"
                                    Click="TestConnection_Click"/>
                            
                            <TextBlock Grid.Row="1" Grid.Column="0" 
                                       Text="Database:" 
                                       VerticalAlignment="Center" 
                                       Margin="0,0,10,10"/>
                            <TextBox Grid.Row="1" Grid.Column="1" 
                                     x:Name="txtDatabase" 
                                     Text="AppOrderNilon"
                                     Padding="8,6" 
                                     Margin="0,0,10,10"/>
                            
                            <TextBlock Grid.Row="2" Grid.Column="0" 
                                       Text="Username:" 
                                       VerticalAlignment="Center" 
                                       Margin="0,0,10,10"/>
                            <TextBox Grid.Row="2" Grid.Column="1" 
                                     x:Name="txtUsername" 
                                     Text="sa"
                                     Padding="8,6" 
                                     Margin="0,0,10,10"/>
                            
                            <TextBlock Grid.Row="3" Grid.Column="0" 
                                       Text="Password:" 
                                       VerticalAlignment="Center" 
                                       Margin="0,0,10,10"/>
                            <PasswordBox Grid.Row="3" Grid.Column="1" 
                                         x:Name="txtPassword" 
                                         Padding="8,6" 
                                         Margin="0,0,10,10"/>
                        </Grid>
                    </StackPanel>
                </Border>
                
                <!-- System Settings -->
                <Border Grid.Row="1" 
                        Background="White" 
                        CornerRadius="10" 
                        Padding="20" 
                        Margin="0,0,0,20"
                        Effect="{StaticResource CardShadow}">
                    <StackPanel>
                        <TextBlock Text="Cài đặt hệ thống" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Margin="0,0,0,15"/>
                        
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Row="0" Grid.Column="0" 
                                       Text="Tên công ty:" 
                                       VerticalAlignment="Center" 
                                       Margin="0,0,10,10"/>
                            <TextBox Grid.Row="0" Grid.Column="1" 
                                     x:Name="txtCompanyName" 
                                     Text="AppOrderNilon"
                                     Padding="8,6" 
                                     Margin="0,0,0,10"/>
                            
                            <TextBlock Grid.Row="1" Grid.Column="0" 
                                       Text="Địa chỉ:" 
                                       VerticalAlignment="Center" 
                                       Margin="0,0,10,10"/>
                            <TextBox Grid.Row="1" Grid.Column="1" 
                                     x:Name="txtAddress" 
                                     Text="123 Đường ABC, Quận XYZ, TP.HCM"
                                     Padding="8,6" 
                                     Margin="0,0,0,10"/>
                            
                            <TextBlock Grid.Row="2" Grid.Column="0" 
                                       Text="Số điện thoại:" 
                                       VerticalAlignment="Center" 
                                       Margin="0,0,10,10"/>
                            <TextBox Grid.Row="2" Grid.Column="1" 
                                     x:Name="txtPhone" 
                                     Text="0123456789"
                                     Padding="8,6" 
                                     Margin="0,0,0,10"/>
                            
                            <TextBlock Grid.Row="3" Grid.Column="0" 
                                       Text="Email:" 
                                       VerticalAlignment="Center" 
                                       Margin="0,0,10,10"/>
                            <TextBox Grid.Row="3" Grid.Column="1" 
                                     x:Name="txtEmail" 
                                     Text="info@appordernilon.com"
                                     Padding="8,6" 
                                     Margin="0,0,0,10"/>
                        </Grid>
                    </StackPanel>
                </Border>
                
                <!-- Backup & Maintenance -->
                <Border Grid.Row="2" 
                        Background="White" 
                        CornerRadius="10" 
                        Padding="20" 
                        Margin="0,0,0,20"
                        Effect="{StaticResource CardShadow}">
                    <StackPanel>
                        <TextBlock Text="Sao lưu &amp; Bảo trì" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Margin="0,0,0,15"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <Button Grid.Column="0" 
                                    Content="Sao lưu dữ liệu" 
                                    Background="#4CAF50" 
                                    Foreground="White" 
                                    Padding="15,10" 
                                    Margin="0,0,10,0"
                                    Click="BackupData_Click"/>
                            
                            <Button Grid.Column="1" 
                                    Content="Khôi phục dữ liệu" 
                                    Background="#FF9800" 
                                    Foreground="White" 
                                    Padding="15,10" 
                                    Margin="5,0,5,0"
                                    Click="RestoreData_Click"/>
                            
                            <Button Grid.Column="2" 
                                    Content="Dọn dẹp dữ liệu" 
                                    Background="#F44336" 
                                    Foreground="White" 
                                    Padding="15,10" 
                                    Margin="10,0,0,0"
                                    Click="CleanupData_Click"/>
                        </Grid>
                    </StackPanel>
                </Border>
                
                <!-- Save Settings -->
                <Border Grid.Row="3" 
                        Background="White" 
                        CornerRadius="10" 
                        Padding="20"
                        Effect="{StaticResource CardShadow}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" 
                                   Text="Lưu tất cả cài đặt và áp dụng thay đổi" 
                                   VerticalAlignment="Center"/>
                        
                        <Button Grid.Column="1" 
                                Content="Lưu cài đặt" 
                                Background="#4CAF50" 
                                Foreground="White" 
                                Padding="20,10" 
                                Margin="0,0,10,0"
                                Click="SaveSettings_Click"/>
                        
                        <Button Grid.Column="2" 
                                Content="Đặt lại" 
                                Background="#607D8B" 
                                Foreground="White" 
                                Padding="20,10"
                                Click="ResetSettings_Click"/>
                    </Grid>
                </Border>
            </Grid>
        </ScrollViewer>
    </Grid>
</Window> 