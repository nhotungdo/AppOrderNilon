<Window x:Class="AppOrderNilon.Views.StaffRestockRequestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Yêu cầu nhập hàng" Height="500" Width="600"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">
    
    <Window.Resources>
        <DropShadowEffect x:Key="CardShadow" 
                          BlurRadius="8" 
                          Direction="270" 
                          ShadowDepth="2" 
                          Color="#22000000"/>
        
        <Style x:Key="StaffButton" TargetType="Button">
            <Setter Property="Background" Value="#FF6B35"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E55A2B"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#FF6B35" Padding="15">
            <TextBlock Text="Yêu cầu nhập hàng" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       Foreground="White"
                       HorizontalAlignment="Center"/>
        </Border>
        
        <!-- Form Content -->
        <Border Grid.Row="1" 
                Background="White" 
                CornerRadius="10" 
                Padding="30"
                Effect="{StaticResource CardShadow}"
                Margin="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Product Selection -->
                <Grid Grid.Row="0" Margin="0,0,0,20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" 
                               Text="Sản phẩm *" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,5"/>
                    
                    <ComboBox x:Name="cmbProduct" 
                              Grid.Row="1"
                              Height="35"
                              Padding="10,5"
                              BorderBrush="#DDDDDD"
                              BorderThickness="1"
                             
                              SelectionChanged="Product_SelectionChanged"/>
                </Grid>
                
                <!-- Current Stock -->
                <Grid Grid.Row="1" Margin="0,0,0,20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" 
                               Text="Tồn kho hiện tại" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,5"/>
                    
                    <TextBlock x:Name="txtCurrentStock" 
                               Grid.Row="1"
                               Text="0"
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="#FF6B35"/>
                </Grid>
                
                <!-- Requested Quantity -->
                <Grid Grid.Row="2" Margin="0,0,0,20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" 
                               Text="Số lượng yêu cầu *" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,5"/>
                    
                    <TextBox x:Name="txtQuantity" 
                             Grid.Row="1"
                             Height="35"
                             Padding="10,5"
                             BorderBrush="#DDDDDD"
                             BorderThickness="1"
                            
                             Text="0"/>
                </Grid>
                
                <!-- Priority -->
                <Grid Grid.Row="3" Margin="0,0,0,20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" 
                               Text="Mức ưu tiên *" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,5"/>
                    
                    <ComboBox x:Name="cmbPriority" 
                              Grid.Row="1"
                              Height="35"
                              Padding="10,5"
                              BorderBrush="#DDDDDD"
                              BorderThickness="1"
                              >
                        <ComboBoxItem Content="Thấp"/>
                        <ComboBoxItem Content="Trung bình"/>
                        <ComboBoxItem Content="Cao"/>
                        <ComboBoxItem Content="Khẩn cấp"/>
                    </ComboBox>
                </Grid>
                
                <!-- Notes -->
                <Grid Grid.Row="4" Margin="0,0,0,20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" 
                               Text="Ghi chú" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,5"/>
                    
                    <TextBox x:Name="txtNotes" 
                             Grid.Row="1"
                             Height="80"
                             Padding="10,5"
                             BorderBrush="#DDDDDD"
                             BorderThickness="1"
                             
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto"/>
                </Grid>
                
                <!-- Spacer -->
                <Grid Grid.Row="5"/>
                
                <!-- Buttons -->
                <StackPanel Grid.Row="6" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Right">
                    <Button Content="Hủy" 
                            Background="#6C757D"
                            Foreground="White"
                            Height="40"
                            Padding="20,10"
                            Margin="0,0,10,0"
                            Click="Cancel_Click"/>
                    
                    <Button Content="Gửi yêu cầu" 
                            Style="{StaticResource StaffButton}"
                            Height="40"
                            Padding="20,10"
                            Click="SendRequest_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window> 