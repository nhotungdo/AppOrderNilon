<Window x:Class="AppOrderNilon.Views.CategoryFormWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Danh mục" Height="300" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock x:Name="txtTitle" Grid.Row="0" 
                   Text="THÊM DANH MỤC MỚI" 
                   FontSize="18" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <!-- Category Name -->
        <Grid Grid.Row="1" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="Tên danh mục:" VerticalAlignment="Center"/>
            <TextBox x:Name="txtCategoryName" Grid.Column="1" 
                     Margin="10,0,0,0" Padding="5"/>
        </Grid>

        <!-- Description -->
        <Grid Grid.Row="2" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="Mô tả:" VerticalAlignment="Top" Margin="0,5,0,0"/>
            <TextBox x:Name="txtDescription" Grid.Column="1" 
                     Margin="10,0,0,0" Padding="5"
                     TextWrapping="Wrap" AcceptsReturn="True"
                     Height="80" VerticalScrollBarVisibility="Auto"/>
        </Grid>

        <!-- Quantity (Read-only for edit mode) -->
        <Grid x:Name="gridQuantity" Grid.Row="3" Margin="0,0,0,15" Visibility="Collapsed">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="Số sản phẩm:" VerticalAlignment="Center"/>
            <TextBox x:Name="txtQuantity" Grid.Column="1" 
                     Margin="10,0,0,0" Padding="5"
                     IsReadOnly="True" Background="LightGray"/>
        </Grid>

        <!-- Spacer -->
        <Grid Grid.Row="4"/>

        <!-- Buttons -->
        <Grid Grid.Row="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="btnSave" Grid.Column="1" Content="Lưu" 
                    Width="80" Margin="0,0,10,0" Click="BtnSave_Click"/>

            <Button x:Name="btnCancel" Grid.Column="2" Content="Hủy" 
                    Width="80" Click="BtnCancel_Click"/>
        </Grid>
    </Grid>
</Window> 