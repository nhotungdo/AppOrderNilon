<Window x:Class="AppOrderNilon.Views.CustomerDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chi tiết Khách hàng" Height="600" Width="800"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   x:Name="txtTitle"
                   Text="Chi tiết Khách hàng" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Margin="0,0,0,20"
                   HorizontalAlignment="Center"/>
        
        <!-- Customer Information -->
        <Border Grid.Row="1" 
                Background="White" 
                CornerRadius="10" 
                Padding="20" 
                Margin="0,0,0,20"
                Effect="{StaticResource CardShadow}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Row="0" Grid.Column="0" 
                           Text="Tên khách hàng:" 
                           FontWeight="Bold" 
                           VerticalAlignment="Center" 
                           Margin="0,0,10,10"/>
                <TextBlock Grid.Row="0" Grid.Column="1" 
                           x:Name="txtCustomerName" 
                           VerticalAlignment="Center" 
                           Margin="0,0,0,10"/>
                
                <TextBlock Grid.Row="1" Grid.Column="0" 
                           Text="Số điện thoại:" 
                           FontWeight="Bold" 
                           VerticalAlignment="Center" 
                           Margin="0,0,10,10"/>
                <TextBlock Grid.Row="1" Grid.Column="1" 
                           x:Name="txtPhone" 
                           VerticalAlignment="Center" 
                           Margin="0,0,0,10"/>
                
                <TextBlock Grid.Row="2" Grid.Column="0" 
                           Text="Email:" 
                           FontWeight="Bold" 
                           VerticalAlignment="Center" 
                           Margin="0,0,10,10"/>
                <TextBlock Grid.Row="2" Grid.Column="1" 
                           x:Name="txtEmail" 
                           VerticalAlignment="Center" 
                           Margin="0,0,0,10"/>
                
                <TextBlock Grid.Row="3" Grid.Column="0" 
                           Text="Địa chỉ:" 
                           FontWeight="Bold" 
                           VerticalAlignment="Top" 
                           Margin="0,0,10,10"/>
                <TextBlock Grid.Row="3" Grid.Column="1" 
                           x:Name="txtAddress" 
                           TextWrapping="Wrap"
                           VerticalAlignment="Top" 
                           Margin="0,0,0,10"/>
                
                <TextBlock Grid.Row="4" Grid.Column="0" 
                           Text="Ghi chú:" 
                           FontWeight="Bold" 
                           VerticalAlignment="Top" 
                           Margin="0,0,10,10"/>
                <TextBlock Grid.Row="4" Grid.Column="1" 
                           x:Name="txtNotes" 
                           TextWrapping="Wrap"
                           VerticalAlignment="Top" 
                           Margin="0,0,0,10"/>
            </Grid>
        </Border>
        
        <!-- Order History -->
        <Border Grid.Row="2" 
                Background="White" 
                CornerRadius="10" 
                Padding="20"
                Effect="{StaticResource CardShadow}">
            <StackPanel>
                <TextBlock Text="Lịch sử đơn hàng" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           Margin="0,0,0,15"/>
                
                <DataGrid x:Name="dgOrders" 
                          AutoGenerateColumns="False" 
                          IsReadOnly="True"
                          Height="300">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Mã đơn hàng" Binding="{Binding OrderId}" Width="100"/>
                        <DataGridTextColumn Header="Ngày đặt" Binding="{Binding OrderDate, StringFormat=dd/MM/yyyy}" Width="120"/>
                        <DataGridTextColumn Header="Tổng tiền" Binding="{Binding TotalAmount, StringFormat=₫{0:N0}}" Width="120"/>
                        <DataGridTextColumn Header="Trạng thái" Binding="{Binding Status}" Width="100"/>
                        <DataGridTextColumn Header="Ghi chú" Binding="{Binding Notes}" Width="200"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </Border>
        
        <!-- Buttons -->
        <Grid Grid.Row="3" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Grid.Column="0" 
                       x:Name="txtOrderSummary"
                       Text="Tổng cộng: 0 đơn hàng" 
                       VerticalAlignment="Center"
                       FontWeight="SemiBold"/>
            
            <Button Grid.Column="1" 
                    Content="Xem chi tiết đơn hàng" 
                    Background="#2196F3" 
                    Foreground="White" 
                    Padding="15,8" 
                    Margin="0,0,10,0"
                    Click="ViewOrderDetails_Click"/>
            
            <Button Grid.Column="2" 
                    Content="Đóng" 
                    Background="#607D8B" 
                    Foreground="White" 
                    Padding="20,8"
                    Click="Close_Click"/>
        </Grid>
    </Grid>
</Window> 