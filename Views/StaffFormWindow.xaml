<Window x:Class="AppOrderNilon.Views.StaffFormWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thêm/Sửa Staff" Height="500" Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Thông tin Staff" 
                   FontSize="20" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <!-- Form Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Username -->
                <TextBlock Text="Username *" FontWeight="SemiBold" Margin="0,10,0,5"/>
                <TextBox x:Name="txtUsername" Height="35" FontSize="14"
                         TextChanged="txtUsername_TextChanged"/>

                <!-- Password -->
                <TextBlock Text="Password *" FontWeight="SemiBold" Margin="0,15,0,5"/>
                <PasswordBox x:Name="txtPassword" Height="35" FontSize="14"
                            PasswordChanged="txtPassword_PasswordChanged"/>

                <!-- Confirm Password -->
                <TextBlock Text="Xác nhận Password *" FontWeight="SemiBold" Margin="0,15,0,5"/>
                <PasswordBox x:Name="txtConfirmPassword" Height="35" FontSize="14"
                            PasswordChanged="txtConfirmPassword_PasswordChanged"/>

                <!-- Full Name -->
                <TextBlock Text="Họ và tên *" FontWeight="SemiBold" Margin="0,15,0,5"/>
                <TextBox x:Name="txtFullName" Height="35" FontSize="14"
                         TextChanged="txtFullName_TextChanged"/>

                <!-- Email -->
                <TextBlock Text="Email *" FontWeight="SemiBold" Margin="0,15,0,5"/>
                <TextBox x:Name="txtEmail" Height="35" FontSize="14"
                         TextChanged="txtEmail_TextChanged"/>

                <!-- Phone -->
                <TextBlock Text="Số điện thoại *" FontWeight="SemiBold" Margin="0,15,0,5"/>
                <TextBox x:Name="txtPhone" Height="35" FontSize="14"
                         TextChanged="txtPhone_TextChanged"/>

                <!-- Validation Messages -->
                <TextBlock x:Name="txtValidationMessage" 
                           Foreground="Red" FontSize="12" 
                           Margin="0,10,0,0" TextWrapping="Wrap"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                    HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button x:Name="btnSave" Content="Lưu" Width="100" Height="35" 
                    Background="#4CAF50" Foreground="White" FontWeight="SemiBold"
                    Margin="0,0,10,0" Click="btnSave_Click"/>
            <Button x:Name="btnCancel" Content="Hủy" Width="100" Height="35" 
                    Background="#F44336" Foreground="White" FontWeight="SemiBold"
                    Click="btnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window> 