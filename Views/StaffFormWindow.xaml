<Window x:Class="AppOrderNilon.Views.StaffFormWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nhân viên" Height="450" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock x:Name="txtTitle" Grid.Row="0" 
                   Text="THÊM NHÂN VIÊN MỚI" 
                   FontSize="18" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <!-- Username -->
        <Grid Grid.Row="1" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="Username:" VerticalAlignment="Center"/>
            <TextBox x:Name="txtUsername" Grid.Column="1" 
                     Margin="10,0,0,0" Padding="5"/>
        </Grid>

        <!-- Password -->
        <Grid Grid.Row="2" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="Password:" VerticalAlignment="Center"/>
            <PasswordBox x:Name="txtPassword" Grid.Column="1" 
                         Margin="10,0,0,0" Padding="5"/>
        </Grid>

        <!-- Full Name -->
        <Grid Grid.Row="3" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="Họ tên:" VerticalAlignment="Center"/>
            <TextBox x:Name="txtFullName" Grid.Column="1" 
                     Margin="10,0,0,0" Padding="5"/>
        </Grid>

        <!-- Email -->
        <Grid Grid.Row="4" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="Email:" VerticalAlignment="Center"/>
            <TextBox x:Name="txtEmail" Grid.Column="1" 
                     Margin="10,0,0,0" Padding="5"/>
        </Grid>

        <!-- Phone -->
        <Grid Grid.Row="5" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="Phone:" VerticalAlignment="Center"/>
            <TextBox x:Name="txtPhone" Grid.Column="1" 
                     Margin="10,0,0,0" Padding="5"/>
        </Grid>

        <!-- Change Password Checkbox (for edit mode) -->
        <Grid x:Name="gridChangePassword" Grid.Row="6" Margin="0,0,0,15" Visibility="Collapsed">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="Đổi password:" VerticalAlignment="Center"/>
            <CheckBox x:Name="chkChangePassword" Grid.Column="1" 
                      Margin="10,0,0,0" VerticalAlignment="Center"
                      Checked="ChkChangePassword_Checked" Unchecked="ChkChangePassword_Unchecked"/>
        </Grid>

        <!-- New Password (for edit mode) -->
        <Grid x:Name="gridNewPassword" Grid.Row="7" Margin="0,0,0,15" Visibility="Collapsed">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="Password mới:" VerticalAlignment="Center"/>
            <PasswordBox x:Name="txtNewPassword" Grid.Column="1" 
                         Margin="10,0,0,0" Padding="5"/>
        </Grid>

        <!-- Spacer -->
        <Grid Grid.Row="8"/>

        <!-- Buttons -->
        <Grid Grid.Row="9">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="btnSave" Grid.Column="1" Content="Lưu" 
                    Width="80" Margin="0,0,10,0" Click="BtnSave_Click"/>

            <Button x:Name="btnCancel" Grid.Column="2" Content="Hủy" 
                    Width="80" Click="BtnCancel_Click"/>
        </Grid>
    </Grid>
</Window> 