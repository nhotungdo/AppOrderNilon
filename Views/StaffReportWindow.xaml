<Window x:Class="AppOrderNilon.Views.StaffReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Báo cáo - Staff" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">
    
    <Window.Resources>
        <DropShadowEffect x:Key="CardShadow" 
                          BlurRadius="8" 
                          Direction="270" 
                          ShadowDepth="2" 
                          Color="#22000000"/>
        
        <Style x:Key="StaffButton" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2196F3"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#2196F3" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Báo cáo" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="White"/>
                    <TextBlock Text="Xem báo cáo và thống kê công việc" 
                               FontSize="14" 
                               Foreground="White" 
                               Margin="0,5,0,0"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock Text="Nhân viên: " 
                               Foreground="White" 
                               VerticalAlignment="Center"/>
                    <TextBlock x:Name="txtStaffName" 
                               Text="Trần Nhân Viên" 
                               Foreground="White" 
                               FontWeight="Bold" 
                               VerticalAlignment="Center"/>
                    
                    <Button Content="Quay lại" 
                            Background="Transparent" 
                            Foreground="White" 
                            BorderBrush="White" 
                            BorderThickness="1"
                            Padding="10,5"
                            Margin="15,0,0,0"
                            Click="Back_Click"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Report Options -->
            <Border Grid.Row="0" 
                    Background="White" 
                    CornerRadius="10" 
                    Padding="20"
                    Effect="{StaticResource CardShadow}"
                    Margin="0,0,0,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" 
                               Text="Loại báo cáo:" 
                               FontWeight="SemiBold" 
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>
                    
                    <ComboBox x:Name="cmbReportType" 
                              Grid.Column="1"
                              Width="150"
                              Margin="0,0,10,0"
                              SelectionChanged="ReportType_SelectionChanged">
                        <ComboBoxItem Content="Báo cáo đơn hàng"/>
                        <ComboBoxItem Content="Báo cáo nhiệm vụ"/>
                        <ComboBoxItem Content="Báo cáo tồn kho"/>
                        <ComboBoxItem Content="Báo cáo hiệu suất"/>
                    </ComboBox>
                    
                    <TextBlock Grid.Column="2" 
                               Text="Thời gian:" 
                               FontWeight="SemiBold" 
                               VerticalAlignment="Center"
                               Margin="20,0,10,0"/>
                    
                    <ComboBox x:Name="cmbTimeRange" 
                              Grid.Column="3"
                              Width="150"
                              Margin="0,0,10,0"
                              SelectionChanged="TimeRange_SelectionChanged">
                        <ComboBoxItem Content="Hôm nay"/>
                        <ComboBoxItem Content="Tuần này"/>
                        <ComboBoxItem Content="Tháng này"/>
                        <ComboBoxItem Content="Quý này"/>
                        <ComboBoxItem Content="Năm nay"/>
                    </ComboBox>
                    
                    <Button Content="Tạo báo cáo" 
                            Grid.Column="4"
                            Style="{StaticResource StaffButton}"
                            Height="35"
                            Padding="15,5"
                            Click="GenerateReport_Click"/>
                </Grid>
            </Border>
            
            <!-- Report Content -->
            <Border Grid.Row="1" 
                    Background="White" 
                    CornerRadius="10" 
                    Padding="20"
                    Effect="{StaticResource CardShadow}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock x:Name="txtReportTitle" 
                               Text="Báo cáo đơn hàng" 
                               FontSize="18" 
                               FontWeight="Bold" 
                               Margin="0,0,0,15"/>
                    
                    <ScrollViewer Grid.Row="1" 
                                  VerticalScrollBarVisibility="Auto">
                        <StackPanel x:Name="spReportContent">
                            <!-- Report content will be generated here -->
                            <TextBlock Text="Chọn loại báo cáo và thời gian để xem báo cáo chi tiết." 
                                       FontSize="14" 
                                       Foreground="#666666"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Margin="0,50,0,0"/>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window> 