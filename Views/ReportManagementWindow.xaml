<Window x:Class="AppOrderNilon.Views.ReportManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quản lý Báo cáo" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="QUẢN LÝ BÁO CÁO" 
                   FontSize="24" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <!-- Generate Report Section -->
        <Border Grid.Row="1" BorderBrush="#CCCCCC" BorderThickness="1" 
                CornerRadius="5" Padding="15" Margin="0,0,0,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" Text="TẠO BÁO CÁO MỚI" 
                           FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" Text="Loại báo cáo:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <ComboBox x:Name="cboReportType" Grid.Column="1" Margin="0,0,10,0" Padding="5">
                        <ComboBoxItem Content="Doanh thu" Tag="Revenue"/>
                        <ComboBoxItem Content="Tồn kho" Tag="Inventory"/>
                        <ComboBoxItem Content="Sản phẩm bán chạy" Tag="BestSelling"/>
                    </ComboBox>
                    
                    <TextBlock Grid.Column="2" Text="Từ ngày:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <DatePicker x:Name="dpStartDate" Grid.Column="3" Margin="0,0,10,0"/>
                    
                    <TextBlock Grid.Column="4" Text="Đến ngày:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <DatePicker x:Name="dpEndDate" Grid.Column="5" Margin="0,0,10,0"/>
                    
                    <Button x:Name="btnGenerate" Grid.Column="6" Content="Tạo báo cáo" 
                            Width="120" Click="BtnGenerate_Click"/>
                </Grid>
            </Grid>
        </Border>

        <!-- Search and Controls -->
        <Grid Grid.Row="2" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBox x:Name="txtSearch" Grid.Column="0" 
                     Margin="0,0,10,0" Padding="5"
                     TextChanged="TxtSearch_TextChanged"
                     ToolTip="Tìm kiếm theo loại báo cáo..."/>

            <Button x:Name="btnView" Grid.Column="1" Content="Xem chi tiết" 
                    Width="100" Margin="0,0,10,0" Click="BtnView_Click"/>

            <Button x:Name="btnEdit" Grid.Column="2" Content="Sửa" 
                    Width="80" Margin="0,0,10,0" Click="BtnEdit_Click"/>

            <Button x:Name="btnDelete" Grid.Column="3" Content="Xóa" 
                    Width="80" Click="BtnDelete_Click"/>
        </Grid>

        <!-- DataGrid -->
        <DataGrid x:Name="dgReports" Grid.Row="3" 
                  AutoGenerateColumns="False" 
                  CanUserAddRows="False" 
                  CanUserDeleteRows="False"
                  SelectionMode="Single"
                  SelectionChanged="DgReports_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ReportId}" Width="50"/>
                <DataGridTextColumn Header="Loại báo cáo" Binding="{Binding ReportType}" Width="120"/>
                <DataGridTextColumn Header="Từ ngày" Binding="{Binding StartDate, StringFormat=dd/MM/yyyy}" Width="100"/>
                <DataGridTextColumn Header="Đến ngày" Binding="{Binding EndDate, StringFormat=dd/MM/yyyy}" Width="100"/>
                <DataGridTextColumn Header="Ngày tạo" Binding="{Binding GeneratedDate, StringFormat=dd/MM/yyyy HH:mm}" Width="150"/>
                <DataGridTextColumn Header="Admin" Binding="{Binding Admin.FullName}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Status -->
        <TextBlock x:Name="txtStatus" Grid.Row="4" 
                   Margin="0,10,0,0" 
                   Text="Sẵn sàng" 
                   FontStyle="Italic"/>
    </Grid>
</Window> 