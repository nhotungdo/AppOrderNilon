<Window x:Class="AppOrderNilon.Views.CustomerManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quản lý Khách hàng - AppOrderNilon" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="#F5F5F5">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#2196F3" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Quản lý Khách hàng" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="White"/>
                    <TextBlock Text="Quản lý thông tin khách hàng và lịch sử mua hàng" 
                               FontSize="14" 
                               Foreground="White" 
                               Margin="0,5,0,0"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="Quay lại Dashboard" 
                            Background="Transparent" 
                            Foreground="White" 
                            BorderBrush="White" 
                            BorderThickness="1"
                            Padding="10,5"
                            Margin="0,0,10,0"
                            Click="BackToDashboard_Click"/>
                    <Button Content="Đăng xuất" 
                            Background="Transparent" 
                            Foreground="White" 
                            BorderBrush="White" 
                            BorderThickness="1"
                            Padding="10,5"
                            Click="Logout_Click"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Search and Filter -->
        <Border Grid.Row="1" Background="White" Padding="15" Margin="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Search -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="Tìm kiếm:" 
                               VerticalAlignment="Center" 
                               Margin="0,0,10,0"/>
                    <TextBox x:Name="txtSearch" 
                             Width="300" 
                             Height="35" 
                             Padding="10,5"
                             VerticalContentAlignment="Center"
                             TextChanged="Search_TextChanged"/>
                </StackPanel>
                
                <!-- Filter by VIP -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="20,0,0,0">
                    <TextBlock Text="Loại khách hàng:" 
                               VerticalAlignment="Center" 
                               Margin="0,0,10,0"/>
                    <ComboBox x:Name="cmbCustomerType" 
                              Width="150" 
                              Height="35" 
                              Padding="10,5"
                              SelectionChanged="CustomerTypeFilter_Changed">
                        <ComboBoxItem Content="Tất cả"/>
                        <ComboBoxItem Content="Khách hàng VIP"/>
                        <ComboBoxItem Content="Khách hàng thường"/>
                    </ComboBox>
                </StackPanel>
                
                <!-- Add Customer Button -->
                <Button Grid.Column="2" 
                        Content="+ Thêm khách hàng" 
                        Background="#FF9800" 
                        Foreground="White" 
                        FontWeight="SemiBold"
                        Height="35" 
                        Padding="15,5"
                        Margin="20,0,0,0"
                        Click="AddCustomer_Click"/>
            </Grid>
        </Border>
        
        <!-- Customers DataGrid -->
        <Border Grid.Row="2" Background="White" Margin="0,1,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <DataGrid x:Name="dgCustomers" 
                          AutoGenerateColumns="False" 
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          SelectionChanged="Customer_SelectionChanged"
                          GridLinesVisibility="Horizontal"
                          HeadersVisibility="Column"
                          RowHeaderWidth="0">
                    
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Mã KH" 
                                            Binding="{Binding CustomerID}" 
                                            Width="80"/>
                        <DataGridTextColumn Header="Tên khách hàng" 
                                            Binding="{Binding CustomerName}" 
                                            Width="200"/>
                        <DataGridTextColumn Header="Số điện thoại" 
                                            Binding="{Binding Phone}" 
                                            Width="120"/>
                        <DataGridTextColumn Header="Email" 
                                            Binding="{Binding Email}" 
                                            Width="180"/>
                        <DataGridTextColumn Header="Địa chỉ" 
                                            Binding="{Binding Address}" 
                                            Width="250"/>
                        <DataGridTextColumn Header="Loại KH" 
                                            Width="120">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Notes}" Value="Khách hàng VIP">
                                            <Setter Property="Text" Value="VIP"/>
                                            <Setter Property="Foreground" Value="Gold"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Notes}" Value="">
                                            <Setter Property="Text" Value="Thường"/>
                                            <Setter Property="Foreground" Value="Gray"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Ghi chú" 
                                            Binding="{Binding Notes}" 
                                            Width="150"/>
                        
                        <!-- Action Buttons -->
                        <DataGridTemplateColumn Header="Thao tác" Width="180">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Button Content="Xem" 
                                                Background="#2196F3" 
                                                Foreground="White" 
                                                Padding="8,4"
                                                Margin="0,0,5,0"
                                                Click="ViewCustomer_Click"/>
                                        <Button Content="Sửa" 
                                                Background="#FF9800" 
                                                Foreground="White" 
                                                Padding="8,4"
                                                Margin="0,0,5,0"
                                                Click="EditCustomer_Click"/>
                                        <Button Content="Xóa" 
                                                Background="#F44336" 
                                                Foreground="White" 
                                                Padding="8,4"
                                                Click="DeleteCustomer_Click"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
                
                <!-- Status Bar -->
                <Border Grid.Row="1" 
                        Background="#F5F5F5" 
                        Padding="10" 
                        BorderBrush="#E0E0E0" 
                        BorderThickness="0,1,0,0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Tổng số khách hàng: " 
                                   FontWeight="SemiBold"/>
                        <TextBlock x:Name="txtTotalCustomers" 
                                   Text="0" 
                                   FontWeight="Bold" 
                                   Foreground="#FF9800"/>
                        <TextBlock Text=" | Khách hàng VIP: " 
                                   FontWeight="SemiBold" 
                                   Margin="20,0,0,0"/>
                        <TextBlock x:Name="txtVIPCustomers" 
                                   Text="0" 
                                   FontWeight="Bold" 
                                   Foreground="Gold"/>
                        <TextBlock Text=" | Khách hàng thường: " 
                                   FontWeight="SemiBold" 
                                   Margin="20,0,0,0"/>
                        <TextBlock x:Name="txtRegularCustomers" 
                                   Text="0" 
                                   FontWeight="Bold" 
                                   Foreground="Gray"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window> 