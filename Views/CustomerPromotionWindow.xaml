<Window x:Class="AppOrderNilon.Views.CustomerPromotionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ưu đãi và điểm thưởng" Height="600" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="#FF9800" 
                Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Ưu đãi và điểm thưởng" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="White"/>
                    <TextBlock Text="Xem các ưu đãi hiện có và điểm thưởng của bạn" 
                               FontSize="14" 
                               Foreground="White" 
                               Opacity="0.9"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal" 
                            VerticalAlignment="Center">
                    <TextBlock Text="Khách hàng: " 
                               Foreground="White" 
                               VerticalAlignment="Center"/>
                    <TextBlock x:Name="txtCustomerName" 
                               Text="Khách hàng" 
                               Foreground="White" 
                               FontWeight="Bold" 
                               VerticalAlignment="Center"/>
                    <Button Content="Quay lại" 
                            Background="Transparent" 
                            Foreground="White" 
                            BorderBrush="White" 
                            BorderThickness="1"
                            Padding="15,5"
                            Margin="20,0,0,0"
                            Click="Back_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Border Grid.Row="1" 
                Background="White" 
                Margin="20" 
                CornerRadius="10" 
                Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Reward Points Summary -->
                <Border Grid.Row="0" 
                        Background="#E3F2FD" 
                        CornerRadius="8" 
                        Padding="20" 
                        Margin="0,0,0,20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                            <TextBlock Text="Điểm thưởng hiện tại" 
                                       FontSize="16" 
                                       FontWeight="Bold" 
                                       Foreground="#1976D2"/>
                            <TextBlock x:Name="txtCurrentPoints" 
                                       Text="1,250" 
                                       FontSize="24" 
                                       FontWeight="Bold" 
                                       Foreground="#FF9800"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                            <TextBlock Text="Điểm đã sử dụng" 
                                       FontSize="16" 
                                       FontWeight="Bold" 
                                       Foreground="#1976D2"/>
                            <TextBlock x:Name="txtUsedPoints" 
                                       Text="500" 
                                       FontSize="24" 
                                       FontWeight="Bold" 
                                       Foreground="#4CAF50"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                            <TextBlock Text="Tổng điểm tích lũy" 
                                       FontSize="16" 
                                       FontWeight="Bold" 
                                       Foreground="#1976D2"/>
                            <TextBlock x:Name="txtTotalPoints" 
                                       Text="1,750" 
                                       FontSize="24" 
                                       FontWeight="Bold" 
                                       Foreground="#2196F3"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Exchange Rate Info -->
                <Border Grid.Row="1" 
                        Background="#FFF3E0" 
                        CornerRadius="8" 
                        Padding="15" 
                        Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="💡 Thông tin đổi điểm" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Foreground="#E65100"/>
                        <TextBlock Text="• 1,000 điểm = 50,000 VNĐ giảm giá" 
                                   FontSize="14" 
                                   Foreground="#E65100"/>
                        <TextBlock Text="• Điểm có hiệu lực trong 12 tháng" 
                                   FontSize="14" 
                                   Foreground="#E65100"/>
                        <TextBlock Text="• Có thể kết hợp với các ưu đãi khác" 
                                   FontSize="14" 
                                   Foreground="#E65100"/>
                    </StackPanel>
                </Border>

                <!-- Promotions List -->
                <Border Grid.Row="2" 
                        Background="White" 
                        CornerRadius="8" 
                        BorderBrush="#E0E0E0" 
                        BorderThickness="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Ưu đãi hiện có" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Margin="15,15,15,10"/>

                        <ScrollViewer Grid.Row="1">
                            <ItemsControl x:Name="icPromotions">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#F8F9FA" 
                                                CornerRadius="8" 
                                                Padding="15" 
                                                Margin="15,5">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <StackPanel Grid.Row="0" Grid.Column="0">
                                                    <TextBlock Text="{Binding Title}" 
                                                               FontSize="16" 
                                                               FontWeight="Bold" 
                                                               Foreground="#1976D2"/>
                                                    <TextBlock Text="{Binding Description}" 
                                                               FontSize="14" 
                                                               Foreground="#666" 
                                                               TextWrapping="Wrap" 
                                                               Margin="0,5,0,0"/>
                                                </StackPanel>

                                                <StackPanel Grid.Row="0" Grid.Column="1" 
                                                            HorizontalAlignment="Right">
                                                    <TextBlock Text="{Binding DiscountPercent, StringFormat='Giảm {0}%'}" 
                                                               FontSize="16" 
                                                               FontWeight="Bold" 
                                                               Foreground="#4CAF50"/>
                                                    <TextBlock Text="{Binding ExpiryDate, StringFormat='Hết hạn: {0:dd/MM/yyyy}'}" 
                                                               FontSize="12" 
                                                               Foreground="#999"/>
                                                </StackPanel>

                                                <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                                        Background="#E8F5E8" 
                                                        CornerRadius="5" 
                                                        Padding="10" 
                                                        Margin="0,10,0,0">
                                                    <TextBlock Text="✅ Đang hoạt động" 
                                                               FontSize="12" 
                                                               FontWeight="Bold" 
                                                               Foreground="#4CAF50" 
                                                               HorizontalAlignment="Center"/>
                                                </Border>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window> 