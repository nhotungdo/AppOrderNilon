<Window x:Class="AppOrderNilon.Views.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Đăng ký - AppOrderNilon" Height="700" Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="White">
    
    <Window.Resources>
        <!-- Modern TextBox Style -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Height" Value="45"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Background" Value="#FAFAFA"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#2196F3"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- Modern PasswordBox Style -->
        <Style x:Key="ModernPasswordBox" TargetType="PasswordBox">
            <Setter Property="Height" Value="45"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Background" Value="#FAFAFA"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#2196F3"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- Modern ComboBox Style -->
        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="Height" Value="45"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Background" Value="#FAFAFA"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        
        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Height" Value="50"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="10"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1976D2"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#1565C0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Border Background="White" CornerRadius="20" Padding="40">
                <StackPanel>
                    <!-- Back Button -->
                    <Button x:Name="btnBack" 
                            Content="← Quay lại" 
                            Style="{StaticResource ModernButton}"
                            Background="#9E9E9E"
                            HorizontalAlignment="Left"
                            Width="100"
                            Margin="0,0,0,20"
                            Click="btnBack_Click"/>
                    
                    <!-- Avatar -->
                    <Ellipse Width="80" Height="80" Margin="0,0,0,20" HorizontalAlignment="Center">
                        <Ellipse.Fill>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#E8F5E8" Offset="0"/>
                                <GradientStop Color="#2196F3" Offset="1"/>
                            </LinearGradientBrush>
                        </Ellipse.Fill>
                        <Ellipse.Effect>
                            <DropShadowEffect BlurRadius="10" ShadowDepth="3" Color="#20000000"/>
                        </Ellipse.Effect>
                    </Ellipse>
                    
                    <!-- Welcome Text -->
                    <TextBlock Text="Tạo tài khoản mới" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="#333333"
                               HorizontalAlignment="Center" 
                               Margin="0,0,0,30"/>
                    
                    <!-- Full Name Input -->
                    <TextBlock Text="Họ và tên *" 
                               FontWeight="SemiBold" 
                               Foreground="#666666"
                               Margin="0,0,0,8"/>
                    <TextBox x:Name="txtFullName" 
                             Style="{StaticResource ModernTextBox}"
                             TextChanged="txtFullName_TextChanged"/>
                    
                    <!-- Username Input -->
                    <TextBlock Text="Tên đăng nhập *" 
                               FontWeight="SemiBold" 
                               Foreground="#666666"
                               Margin="0,0,0,8"/>
                    <TextBox x:Name="txtUsername" 
                             Style="{StaticResource ModernTextBox}"
                             TextChanged="txtUsername_TextChanged"/>
                    
                    <!-- Email Input -->
                    <TextBlock Text="Email *" 
                               FontWeight="SemiBold" 
                               Foreground="#666666"
                               Margin="0,0,0,8"/>
                    <TextBox x:Name="txtEmail" 
                             Style="{StaticResource ModernTextBox}"
                             TextChanged="txtEmail_TextChanged"/>
                    
                    <!-- Phone Input -->
                    <TextBlock Text="Số điện thoại *" 
                               FontWeight="SemiBold" 
                               Foreground="#666666"
                               Margin="0,0,0,8"/>
                    <TextBox x:Name="txtPhone" 
                             Style="{StaticResource ModernTextBox}"
                             TextChanged="txtPhone_TextChanged"/>
                    
                    <!-- Address Input -->
                    <TextBlock Text="Địa chỉ" 
                               FontWeight="SemiBold" 
                               Foreground="#666666"
                               Margin="0,0,0,8"/>
                    <TextBox x:Name="txtAddress" 
                             Style="{StaticResource ModernTextBox}"/>
                    
                    <!-- User Type Selection -->
                    <TextBlock Text="Loại tài khoản *" 
                               FontWeight="SemiBold" 
                               Foreground="#666666"
                               Margin="0,0,0,8"/>
                    <ComboBox x:Name="cboUserType" 
                              Style="{StaticResource ModernComboBox}"
                              SelectionChanged="cboUserType_SelectionChanged">
                        <ComboBoxItem Content="Khách hàng" Tag="Customer"/>
                        <ComboBoxItem Content="Nhân viên" Tag="Staff"/>
                    </ComboBox>
                    
                    <!-- Password Input -->
                    <TextBlock Text="Mật khẩu *" 
                               FontWeight="SemiBold" 
                               Foreground="#666666"
                               Margin="0,0,0,8"/>
                    <PasswordBox x:Name="txtPassword" 
                                 Style="{StaticResource ModernPasswordBox}"
                                 PasswordChanged="txtPassword_PasswordChanged"/>
                    
                    <!-- Confirm Password Input -->
                    <TextBlock Text="Xác nhận mật khẩu *" 
                               FontWeight="SemiBold" 
                               Foreground="#666666"
                               Margin="0,0,0,8"/>
                    <PasswordBox x:Name="txtConfirmPassword" 
                                 Style="{StaticResource ModernPasswordBox}"
                                 PasswordChanged="txtConfirmPassword_PasswordChanged"/>
                    
                    <!-- Terms and Conditions -->
                    <CheckBox x:Name="chkTerms" 
                              Content="Tôi đồng ý với điều khoản sử dụng và chính sách bảo mật" 
                              Foreground="#666666"
                              Margin="0,0,0,20"
                              Checked="chkTerms_Checked"
                              Unchecked="chkTerms_Unchecked"/>
                    
                    <!-- Register Button -->
                    <Button x:Name="btnRegister" 
                            Content="Đăng ký" 
                            Style="{StaticResource ModernButton}"
                            Background="#4CAF50" 
                            Foreground="White" 
                            Margin="0,0,0,20"
                            Click="btnRegister_Click"
                            IsEnabled="False"/>
                    
                    <!-- Login Link -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="Đã có tài khoản? " 
                                   Foreground="#666666"/>
                        <TextBlock Text="Đăng nhập" 
                                   Foreground="#2196F3" 
                                   FontWeight="SemiBold"
                                   Cursor="Hand"
                                   MouseLeftButtonDown="Login_Click">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="TextDecorations" Value="Underline"/>
                                            <Setter Property="Foreground" Value="#1976D2"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>
                </StackPanel>
            </Border>
        </ScrollViewer>
    </Grid>
</Window> 