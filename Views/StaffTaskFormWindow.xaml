<Window x:Class="AppOrderNilon.Views.StaffTaskFormWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nhiệm vụ" Height="500" Width="600"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">
    
    <Window.Resources>
        <DropShadowEffect x:Key="CardShadow" 
                          BlurRadius="8" 
                          Direction="270" 
                          ShadowDepth="2" 
                          Color="#22000000"/>
        
        <Style x:Key="StaffButton" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2196F3"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#2196F3" Padding="15">
            <TextBlock x:Name="txtTitle" 
                       Text="Thêm nhiệm vụ mới" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       Foreground="White"
                       HorizontalAlignment="Center"/>
        </Border>
        
        <!-- Form Content -->
        <Border Grid.Row="1" 
                Background="White" 
                CornerRadius="10" 
                Padding="30"
                Effect="{StaticResource CardShadow}"
                Margin="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Task Name -->
                <Grid Grid.Row="0" Margin="0,0,0,20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" 
                               Text="Tên nhiệm vụ *" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,5"/>
                    
                    <TextBox x:Name="txtTaskName" 
                             Grid.Row="1"
                             Height="35"
                             Padding="10,5"
                             BorderBrush="#DDDDDD"
                             BorderThickness="1"
                             />
                </Grid>
                
                <!-- Description -->
                <Grid Grid.Row="1" Margin="0,0,0,20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" 
                               Text="Mô tả" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,5"/>
                    
                    <TextBox x:Name="txtDescription" 
                             Grid.Row="1"
                             Height="80"
                             Padding="10,5"
                             BorderBrush="#DDDDDD"
                             BorderThickness="1"
                            
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto"/>
                </Grid>
                
                <!-- Due Date -->
                <Grid Grid.Row="2" Margin="0,0,0,20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" 
                               Text="Hạn hoàn thành *" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,5"/>
                    
                    <DatePicker x:Name="dpDueDate" 
                                Grid.Row="1"
                                Height="35"
                                Padding="10,5"
                                BorderBrush="#DDDDDD"
                                BorderThickness="1"/>
                </Grid>
                
                <!-- Priority -->
                <Grid Grid.Row="3" Margin="0,0,0,20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" 
                               Text="Mức ưu tiên *" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,5"/>
                    
                    <ComboBox x:Name="cmbPriority" 
                              Grid.Row="1"
                              Height="35"
                              Padding="10,5"
                              BorderBrush="#DDDDDD"
                              BorderThickness="1">
                        <ComboBoxItem Content="Thấp"/>
                        <ComboBoxItem Content="Trung bình"/>
                        <ComboBoxItem Content="Cao"/>
                    </ComboBox>
                </Grid>
                
                <!-- Status -->
                <Grid Grid.Row="4" Margin="0,0,0,20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" 
                               Text="Trạng thái *" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,5"/>
                    
                    <ComboBox x:Name="cmbStatus" 
                              Grid.Row="1"
                              Height="35"
                              Padding="10,5"
                              BorderBrush="#DDDDDD"
                              BorderThickness="1">
                        <ComboBoxItem Content="Chờ thực hiện"/>
                        <ComboBoxItem Content="Đang thực hiện"/>
                        <ComboBoxItem Content="Hoàn thành"/>
                        <ComboBoxItem Content="Đã hủy"/>
                    </ComboBox>
                </Grid>
                
                <!-- Spacer -->
                <Grid Grid.Row="5"/>
                
                <!-- Buttons -->
                <StackPanel Grid.Row="6" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Right">
                    <Button Content="Hủy" 
                            Background="#6C757D"
                            Foreground="White"
                            Height="40"
                            Padding="20,10"
                            Margin="0,0,10,0"
                            Click="Cancel_Click"/>
                    
                    <Button Content="Lưu" 
                            Style="{StaticResource StaffButton}"
                            Height="40"
                            Padding="20,10"
                            Click="Save_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window> 