<Window x:Class="AppOrderNilon.Views.CustomerProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hồ sơ khách hàng" Height="500" Width="600"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="#2196F3" 
                Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Hồ sơ khách hàng" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="White"/>
                    <TextBlock Text="Cập nhật thông tin cá nhân" 
                               FontSize="14" 
                               Foreground="White" 
                               Opacity="0.9"/>
                </StackPanel>
                
                <Button Grid.Column="1" 
                        Content="Đóng" 
                        Background="Transparent" 
                        Foreground="White" 
                        BorderBrush="White" 
                        BorderThickness="1"
                        Padding="15,5"
                        Click="Close_Click"/>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Border Grid.Row="1" 
                Background="White" 
                Margin="20" 
                CornerRadius="10" 
                Padding="30">
            <ScrollViewer>
                <StackPanel>
                    <TextBlock Text="Thông tin cá nhân" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               Margin="0,0,0,20"/>

                    <!-- Customer Information Form -->
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Username -->
                        <TextBlock Grid.Row="0" Grid.Column="0" 
                                   Text="Tên đăng nhập:" 
                                   VerticalAlignment="Center" 
                                   Margin="0,10,0,10"/>
                        <TextBox x:Name="txtUsername" 
                                 Grid.Row="0" Grid.Column="1" 
                                 IsReadOnly="True"
                                 Background="#F5F5F5"
                                 Margin="0,10,0,10"/>

                        <!-- Customer Name -->
                        <TextBlock Grid.Row="1" Grid.Column="0" 
                                   Text="Họ và tên:" 
                                   VerticalAlignment="Center" 
                                   Margin="0,10,0,10"/>
                        <TextBox x:Name="txtCustomerName" 
                                 Grid.Row="1" Grid.Column="1" 
                                 Margin="0,10,0,10"/>

                        <!-- Phone -->
                        <TextBlock Grid.Row="2" Grid.Column="0" 
                                   Text="Số điện thoại:" 
                                   VerticalAlignment="Center" 
                                   Margin="0,10,0,10"/>
                        <TextBox x:Name="txtPhone" 
                                 Grid.Row="2" Grid.Column="1" 
                                 Margin="0,10,0,10"/>

                        <!-- Email -->
                        <TextBlock Grid.Row="3" Grid.Column="0" 
                                   Text="Email:" 
                                   VerticalAlignment="Center" 
                                   Margin="0,10,0,10"/>
                        <TextBox x:Name="txtEmail" 
                                 Grid.Row="3" Grid.Column="1" 
                                 Margin="0,10,0,10"/>

                        <!-- Address -->
                        <TextBlock Grid.Row="4" Grid.Column="0" 
                                   Text="Địa chỉ:" 
                                   VerticalAlignment="Top" 
                                   Margin="0,10,0,10"/>
                        <TextBox x:Name="txtAddress" 
                                 Grid.Row="4" Grid.Column="1" 
                                 Height="60"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto"
                                 Margin="0,10,0,10"/>

                        <!-- Notes -->
                        <TextBlock Grid.Row="5" Grid.Column="0" 
                                   Text="Ghi chú:" 
                                   VerticalAlignment="Top" 
                                   Margin="0,10,0,10"/>
                        <TextBox x:Name="txtNotes" 
                                 Grid.Row="5" Grid.Column="1" 
                                 Height="60"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto"
                                 Margin="0,10,0,10"/>

                        <!-- Password Change Section -->
                        <TextBlock Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2"
                                   Text="Thay đổi mật khẩu (để trống nếu không thay đổi)" 
                                   FontWeight="Bold"
                                   Margin="0,20,0,10"/>

                        <!-- New Password -->
                        <TextBlock Grid.Row="7" Grid.Column="0" 
                                   Text="Mật khẩu mới:" 
                                   VerticalAlignment="Center" 
                                   Margin="0,10,0,10"/>
                        <PasswordBox x:Name="txtNewPassword" 
                                     Grid.Row="7" Grid.Column="1" 
                                     Margin="0,10,0,10"/>
                    </Grid>

                    <!-- Buttons -->
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Right" 
                                Margin="0,30,0,0">
                        <Button Content="Lưu thay đổi" 
                                Background="#4CAF50"
                                Foreground="White"
                                Padding="20,10"
                                Margin="0,0,10,0"
                                Click="Save_Click"/>
                        <Button Content="Hủy" 
                                Background="#F44336"
                                Foreground="White"
                                Padding="20,10"
                                Click="Cancel_Click"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Window> 