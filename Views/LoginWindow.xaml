<Window x:Class="AppOrderNilon.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Đăng nhập - AppOrderNilon" Height="600" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="White">
    
    <Window.Resources>
        <!-- Modern TextBox Style -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#2196F3"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- Modern PasswordBox Style -->
        <Style x:Key="ModernPasswordBox" TargetType="PasswordBox">
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#2196F3"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Border Background="White" CornerRadius="20" Padding="40">
            <StackPanel>
                <!-- Avatar -->
                <Ellipse Width="80" Height="80" Margin="0,0,0,20" HorizontalAlignment="Center">
                    <Ellipse.Fill>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#E3F2FD" Offset="0"/>
                            <GradientStop Color="#2196F3" Offset="1"/>
                        </LinearGradientBrush>
                    </Ellipse.Fill>
                    <Ellipse.Effect>
                        <DropShadowEffect BlurRadius="10" ShadowDepth="3" Color="#20000000"/>
                    </Ellipse.Effect>
                </Ellipse>
                
                <!-- Welcome Text -->
                <TextBlock Text="Welcome bare mortal." 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="#333333"
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,30"/>
                
                <!-- Email/Phone Input -->
                <TextBlock Text="UserName" 
                           FontWeight="SemiBold" 
                           Foreground="#666666"
                           Margin="0,0,0,8"/>
                <TextBox x:Name="txtUsername" 
                         Height="50" 
                         FontSize="16" 
                         Padding="15,10" 
                         Margin="0,0,0,20"
                         BorderBrush="#E0E0E0"
                         BorderThickness="2"
                         Background="#FAFAFA"
                         VerticalContentAlignment="Center"
                         Style="{StaticResource ModernTextBox}"
                         TextChanged="txtUsername_TextChanged"/>
                
                <!-- Password Input -->
                <TextBlock Text="Password" 
                           FontWeight="SemiBold" 
                           Foreground="#666666"
                           Margin="0,0,0,8"/>
                <PasswordBox x:Name="txtPassword" 
                             Height="50" 
                             FontSize="16" 
                             Padding="15,10" 
                             Margin="0,0,0,20"
                             BorderBrush="#E0E0E0"
                             BorderThickness="2"
                             Background="#FAFAFA"
                             VerticalContentAlignment="Center"
                             Style="{StaticResource ModernPasswordBox}"
                             PasswordChanged="txtPassword_PasswordChanged"/>
                
                <!-- Keep me signed in & Reset Password -->
                <Grid Margin="0,0,0,30">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <CheckBox Grid.Column="0" 
                              Content="Keep me signed in" 
                              Foreground="#666666"
                              VerticalAlignment="Center"/>
                    
                    <TextBlock Grid.Column="1" 
                               Text="Reset Password" 
                               Foreground="#2196F3" 
                               FontWeight="SemiBold"
                               Cursor="Hand"
                               VerticalAlignment="Center"
                               MouseLeftButtonDown="ForgotPassword_Click">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="TextDecorations" Value="Underline"/>
                                        <Setter Property="Foreground" Value="#1976D2"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>
                
                <!-- Login Button -->
                <Button x:Name="btnLogin" 
                        Content="Login" 
                        Height="55" 
                        FontSize="18" 
                        FontWeight="Bold"
                        Background="#2196F3" 
                        Foreground="White" 
                        BorderThickness="0"
                        Margin="0,0,0,30"
                        Click="Login_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="10"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                BorderBrush="{TemplateBinding BorderBrush}">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#1976D2"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter Property="Background" Value="#1565C0"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>


                <!-- Register Link -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="New to our website? " 
                               Foreground="#666666"/>
                    <TextBlock Text="Sign up" 
                               Foreground="#2196F3" 
                               FontWeight="SemiBold"
                               Cursor="Hand"
                               MouseLeftButtonDown="Register_Click">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="TextDecorations" Value="Underline"/>
                                        <Setter Property="Foreground" Value="#1976D2"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window> 