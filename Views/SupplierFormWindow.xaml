<Window x:Class="AppOrderNilon.Views.SupplierFormWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nhà cung cấp" Height="400" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock x:Name="txtTitle" Grid.Row="0" 
                   Text="THÊM NHÀ CUNG CẤP MỚI" 
                   FontSize="18" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <!-- Supplier Name -->
        <Grid Grid.Row="1" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="Tên NCC:" VerticalAlignment="Center"/>
            <TextBox x:Name="txtSupplierName" Grid.Column="1" 
                     Margin="10,0,0,0" Padding="5"/>
        </Grid>

        <!-- Contact Name -->
        <Grid Grid.Row="2" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="Người liên hệ:" VerticalAlignment="Center"/>
            <TextBox x:Name="txtContactName" Grid.Column="1" 
                     Margin="10,0,0,0" Padding="5"/>
        </Grid>

        <!-- Phone -->
        <Grid Grid.Row="3" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="Phone:" VerticalAlignment="Center"/>
            <TextBox x:Name="txtPhone" Grid.Column="1" 
                     Margin="10,0,0,0" Padding="5"/>
        </Grid>

        <!-- Email -->
        <Grid Grid.Row="4" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="Email:" VerticalAlignment="Center"/>
            <TextBox x:Name="txtEmail" Grid.Column="1" 
                     Margin="10,0,0,0" Padding="5"/>
        </Grid>

        <!-- Address -->
        <Grid Grid.Row="5" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="Địa chỉ:" VerticalAlignment="Top" Margin="0,5,0,0"/>
            <TextBox x:Name="txtAddress" Grid.Column="1" 
                     Margin="10,0,0,0" Padding="5"
                     TextWrapping="Wrap" AcceptsReturn="True"
                     Height="60" VerticalScrollBarVisibility="Auto"/>
        </Grid>

        <!-- Spacer -->
        <Grid Grid.Row="6"/>

        <!-- Buttons -->
        <Grid Grid.Row="7">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="btnSave" Grid.Column="1" Content="Lưu" 
                    Width="80" Margin="0,0,10,0" Click="BtnSave_Click"/>

            <Button x:Name="btnCancel" Grid.Column="2" Content="Hủy" 
                    Width="80" Click="BtnCancel_Click"/>
        </Grid>
    </Grid>
</Window> 