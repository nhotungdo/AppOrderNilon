<Window x:Class="AppOrderNilon.Views.StaffCustomerManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quản lý khách hàng - Staff" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">
    
    <Window.Resources>
        <DropShadowEffect x:Key="CardShadow" 
                          BlurRadius="8" 
                          Direction="270" 
                          ShadowDepth="2" 
                          Color="#22000000"/>
        
        <Style x:Key="StaffButton" TargetType="Button">
            <Setter Property="Background" Value="#FF6B35"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E55A2B"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#FF6B35" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Quản lý khách hàng" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="White"/>
                    <TextBlock Text="Xem và quản lý thông tin khách hàng" 
                               FontSize="14" 
                               Foreground="White" 
                               Margin="0,5,0,0"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock Text="Nhân viên: " 
                               Foreground="White" 
                               VerticalAlignment="Center"/>
                    <TextBlock x:Name="txtStaffName" 
                               Text="Trần Nhân Viên" 
                               Foreground="White" 
                               FontWeight="Bold" 
                               VerticalAlignment="Center"/>
                    
                    <Button Content="Quay lại" 
                            Background="Transparent" 
                            Foreground="White" 
                            BorderBrush="White" 
                            BorderThickness="1"
                            Padding="10,5"
                            Margin="15,0,0,0"
                            Click="Back_Click"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Filter and Actions -->
            <Border Grid.Row="0" 
                    Background="White" 
                    CornerRadius="10" 
                    Padding="20"
                    Effect="{StaticResource CardShadow}"
                    Margin="0,0,0,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBox x:Name="txtSearch" 
                             Grid.Column="0"
                             Margin="0,0,10,0"
                             TextChanged="Search_TextChanged">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Style.Triggers>
                                    <Trigger Property="Text" Value="">
                                        <Setter Property="Background">
                                            <Setter.Value>
                                                <VisualBrush AlignmentX="Left" AlignmentY="Center" Stretch="None">
                                                    <VisualBrush.Visual>
                                                        <TextBlock Text="Tìm kiếm khách hàng..." 
                                                                   Foreground="Gray" 
                                                                   FontStyle="Italic"/>
                                                    </VisualBrush.Visual>
                                                </VisualBrush>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                    
                    <ComboBox x:Name="cmbTypeFilter" 
                              Grid.Column="1"
                              Width="150"
                              Margin="0,0,10,0"
                              SelectionChanged="TypeFilter_SelectionChanged">
                        <ComboBoxItem Content="Tất cả loại"/>
                        <ComboBoxItem Content="Cá nhân"/>
                        <ComboBoxItem Content="Doanh nghiệp"/>
                        <ComboBoxItem Content="VIP"/>
                    </ComboBox>
                    
                    <Button Content="Làm mới" 
                            Grid.Column="2"
                            Style="{StaticResource StaffButton}"
                            Height="35"
                            Padding="15,5"
                            Margin="0,0,10,0"
                            Click="Refresh_Click"/>
                    
                    <Button Content="Xem chi tiết" 
                            Grid.Column="3"
                            Style="{StaticResource StaffButton}"
                            Height="35"
                            Padding="15,5"
                            Click="ViewDetails_Click"/>
                </Grid>
            </Border>
            
            <!-- Customers List -->
            <Border Grid.Row="1" 
                    Background="White" 
                    CornerRadius="10" 
                    Padding="20"
                    Effect="{StaticResource CardShadow}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Text="Danh sách khách hàng" 
                               FontSize="18" 
                               FontWeight="Bold" 
                               Margin="0,0,0,15"/>
                    
                    <DataGrid x:Name="dgCustomers" 
                              Grid.Row="1"
                              AutoGenerateColumns="False" 
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              IsReadOnly="True"
                              GridLinesVisibility="Horizontal"
                              HeadersVisibility="Column"
                              RowHeaderWidth="0"
                              SelectionMode="Single"
                              SelectionChanged="Customers_SelectionChanged">
                        
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Mã KH" 
                                                Binding="{Binding CustomerId}" 
                                                Width="80"/>
                            <DataGridTextColumn Header="Tên khách hàng" 
                                                Binding="{Binding CustomerName}" 
                                                Width="200"/>
                            <DataGridTextColumn Header="Số điện thoại" 
                                                Binding="{Binding Phone}" 
                                                Width="120"/>
                            <DataGridTextColumn Header="Email" 
                                                Binding="{Binding Email}" 
                                                Width="180"/>
                            <DataGridTextColumn Header="Địa chỉ" 
                                                Binding="{Binding Address}" 
                                                Width="200"/>
                            <DataGridTextColumn Header="Loại" 
                                                Binding="{Binding Notes}" 
                                                Width="100"/>
                            <DataGridTemplateColumn Header="Hành động" Width="120">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Content="Chi tiết" 
                                                    Style="{StaticResource StaffButton}"
                                                    Height="25" 
                                                    Padding="8,2"
                                                    Margin="0,0,5,0"
                                                    Click="ViewCustomerDetails_Click"/>
                                            <Button Content="Liên hệ" 
                                                    Background="#2196F3"
                                                    Foreground="White"
                                                    Height="25" 
                                                    Padding="8,2"
                                                    Click="ContactCustomer_Click"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window> 